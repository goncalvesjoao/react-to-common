{
  "name": "my-react-component",
  "version": "1.0.0",
  "description": "my commonJS react component",
  "author": "",
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "MIT",
  "main": "dist/commonjs/index.js",

  "//": "delete the 'start', 'spa', 'build-docs' entries if you don't need a web site to testing or document your react component",
  "scripts": {
    "start": "npm run spa",
    "spa": "rm -rdf ./spa/tmp && ./node_modules/.bin/gulp --gulpfile ./spa/gulpfile.js",
    "build-docs": "rm -rdf ./docs && ./node_modules/.bin/gulp build --gulpfile ./spa/gulpfile.js",

    "build": "npm run build-commonjs && ./node_modules/.bin/gulp build-standalone",
    "build-commonjs": "rm -rdf ./dist/commonjs && ./node_modules/.bin/gulp build-commonjs",
    "build-standalone": "rm -rdf ./dist/standalone && ./node_modules/.bin/gulp build-standalone",

    "quick-test": "./node_modules/.bin/mocha ./test/**/*Spec.js",
    "test": "rm -rdf ./coverage && node ./node_modules/.bin/babel-istanbul cover ./node_modules/.bin/_mocha ./test/**/*Spec.js",

    "lint": "./node_modules/.bin/eslint ./src/"
  },

  "//": "delete the 'spa' devDependencies entry if you don't need a web site to testing or document your react component",
  "devDependencies": {
    "spa": "file:./spa",

    "gulp": "3.9.0",
    "babel": "5.8.23",
    "webpack": "1.12.2",
    "gulp-babel": "5.2.1",
    "gulp-uglify": "1.4.1",
    "babel-loader": "5.3.2",
    "webpack-stream": "2.1.1",
    "gulp-uglifycss": "1.0.4",

    "eslint": "1.6.0",
    "estraverse": "4.1.0",
    "babel-eslint": "4.1.3",
    "eslint-loader": "1.1.0",
    "eslint-plugin-react": "3.5.1",
    "css-modules-require-hook": "1.0.11",

    "chai": "3.3.0",
    "jsdom": "6.5.1",
    "mocha": "2.3.3",
    "sinon": "1.17.1",
    "mockery": "1.4.0",
    "sinon-chai": "2.8.0",
    "babel-istanbul": "0.3.20",
    "react-addons-test-utils": "0.14.0"
  },

  "dependencies": {
    "react": "0.14.0",
    "jquery": "2.1.4"
  }
}
